@model DropDown4rmViewbag.Models.StudentClass

@{
    ViewData["Title"] = "EditGetStudentClass";
}

<h1>EditGetStudentClass</h1>

<h4>StudentClass</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditGetStudentClass">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="StudId" class="control-label"></label>
                <input asp-for="StudId" class="form-control" />
                <span asp-validation-for="StudId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassId" class="control-label"></label>
                @* <input asp-for="ClassId" class="form-control" /> *@
                <select class="form-select" asp-for="ClassId" id="ClassId">
                    @if (ViewBag.Classes != null)
                    {
                        @foreach (var items in ViewBag.Classes)
                        {
                            <option value=@items.Value>@items.Text</option>
                        }
                    }
                </select>
                <span asp-validation-for="ClassId" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

