@{
    ViewData["Title"] = "TestDropdown";
}

<h1>TestDropdown</h1>

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">

                    <div class="page-title-left">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item active text-primary">Beneficiary</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <!-- end page title -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <form method="post" asp-action="AddBeneficiary" id="form1">
                            <h4 class="card-title mb-4">Add Beneficiary</h4>
                            <div class="mb-3 row">
                                <div class="col-sm-12 col-lg-4">
                                    <label for="" class="col-form-label">Beneficiary Code</label>
                                    <input class="form-control" type="text" value="" id="BenCode">
                                </div>
                                <div class="col-sm-12 col-lg-4">
                                    <label for="" class="col-form-label">Beneficiary Name</label>
                                    <input class="form-control" type="text" value="" id="Name">
                                </div>
                                <div class="col-sm-12 col-lg-4">
                                    <label for="" class="col-form-label">Beneficiary Name (As per Bank Details)</label>
                                    <input class="form-control" type="text" value="" id="NameAsperBank">
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <div class="col-sm-12 col-lg-4">
                                    <label for="" class="col-form-label">Select Scheme Type</label>
                                    <select class="form-select" id="SchemeType">
                                        <option value="0">Select</option>
                                        @if (ViewBag.Schemetype != null)
                                        {
                                            @foreach (var items in ViewBag.Schemetype)
                                            {
                                                <option value=@items.Value>@items.Text </option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-12 col-lg-4">
                                    <label for="" class="col-form-label">Select Scheme</label>
                                    <select class="form-select" id="SchemeName">
                                        @if (ViewBag.Scheme != null)
                                        {
                                            @foreach (var items in ViewBag.Scheme)
                                            {
                                                <option value=@items.Value>@items.Text</option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-12 col-lg-4">
                                    <label for="" class="col-form-label">Select Sub-Secheme</label>
                                    <select class="form-select" id="SubScheme">
                                        <option value="0">Select</option>
                                        @if (ViewBag.Schemetype != null)
                                        {
                                            @foreach (var items in ViewBag.Subscheme)
                                            {
                                                <option value=@items.Value>@items.Text</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <div class="col-sm-12 col-lg-4">
                                    <label for="" class="col-form-label">Select Chart of Accounts</label>
                                    <select class="form-select" id="ChartOfAcct">
                                        <option>Select</option>
                                        <option value="1">option1</option>
                                        <option value="2">option2</option>
                                    </select>
                                </div>

                            </div>
                            <div class="d-flex float-end">
                                <button type="submit" class="btn btn-primary waves-effect waves-light w-md">Submit</button>
                                <button type="reset" id="btnClear" class="btn btn-warning waves-effect waves-light w-md">Clear</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>


    </div> <!-- container-fluid -->
</div>
<!-- End Page-content -->
